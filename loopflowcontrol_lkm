#include <stdio.h>

int main(){

int sum = 0, num;
//for loop
// Sum from 1 to 1000
for (num = 1; num <= 1000; ++num) {
   sum += num;
}
printf("Sum is equal to %d\n",sum);


//while-do
sum = 0; num = 1;
while (num <= 1000) {   //while-do
   sum += num;
   ++num;
}
printf("Sum is equal to %d\n",sum);

//do-while
sum = 0; num = 1;
do {
   sum += num;
   ++num;
} while (num <= 1000);
printf("Sum is equal to %d\n",sum);

    return 0;
}
