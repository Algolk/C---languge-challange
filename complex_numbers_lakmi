/////////////////////////////////////////////////////////////////////////////////////////
/* Example: typedef  */

typedef struct{int real; int imaginary;}complex_t;

int main(){
	complex_t a, *ptr;
	a.real = 1;
	a.imaginary = 4;
	ptr = &a;
	
	printf("real %d imaginary %d\n", ptr->real, ptr->imaginary);
	
	return 0;

}


